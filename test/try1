#include "main.h"
void print_str(char *arr)
{
    while (arr != NULL && *arr != '\0')
    {
        write(1, arr++, sizeof(char));
    }
}
void print_num(int num)
{
    /*logic for printing num*/
}
int _printf(const char *format, ...)
{
    unsigned int num_args;
    unsigned int i = 0;
    char c;
    char *str;
    int num;
    size_t buff_size = 0;
    va_list args;

    va_start(args, format);
    num_args = strlen(format);
    for (i = 0; i < num_args; i++)
    {
        if (format[i] == '%')
        {
            switch (format[++i])
            {
            case 'c':
                c = va_arg(args, int);
                write(1, &c, 1);
                buff_size++;
                break;
            case 's':
                str = va_arg(args, char *);
                print_str(str);
                buff_size++;
                break;
            case '%':
                c = '%';
                write(1, &c, 1);
                buff_size++;
                break;
            default:
            case 'd':
                num = va_arg(args, int);
                print_num(num);
                break;
            }
        }
        else
        {
            c = format[i];
            write(1, &c, 1);
            buff_size++;
        }
    }
    return (buff_size);
}
